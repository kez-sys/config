/* Kez's PSQL */

\set QUIET 1

\set PROMPT1 '%[%033[1;37m%]%n%[%033[0m%]%[%033[1;33m%]@%/%[%033[0m%] %M:%> %[%033[1;37m%]%R%#%x%[%033[0m%] '

\set PROMPT2 '%[%033[1;37m%]%n%[%033[0m%]%[%033[1;33m%]@%/%[%033[0m%] %M:%> %[%033[1;33m%]%R%#%x%[%033[0m%] '


\pset null '[null]'

\set COMP_KEYWORD_CASE upper

\timing

\set HISTSIZE 2000

\x auto

\set VERBOSITY verbose

\set QUIET 0

\echo 'Using Kez\'s psql config. \n'
\echo 'Type :version to see the PostgreSQL version. \n'
\echo 'Type :extensions to see the available extensions. \n'
\echo 'Type \\q (ctrl-d) to exit. \n'
\echo 'Type \\! clear (ctrl-l) to clear the window. \n'
\set version 'SELECT version();'
\set extensions 'select * from pg_available_extensions;'
